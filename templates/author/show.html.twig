{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ author.lastname }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ author.bio }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-success " href="{{ path('app_book_index',{'id': author.id}) }}">Books list</a>

    <a class="btn btn-info " href="{{ path('app_author_index') }}">Back to list</a>
							{% if is_granted('ROLE_ADMIN') %}

    <a class="btn btn-warning " href="{{ path('app_author_edit', {'id': author.id}) }}">Edit</a>

    {{ include('author/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
